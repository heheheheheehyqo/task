{
    "name": "hyqo/task",
    "description": "Running any class as a command from the command line",
    "keywords": [
        "cli",
        "command"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Oleg Sedinkin",
            "email": "a@aw.wtf"
        }
    ],
    "bin": "bin/task",
    "require": {
        "php": "^8.2",
        "hyqo/string": "^3.0",
        "hyqo/container": "^3.0",
        "hyqo/command-line": "^0.2",
        "hyqo/collection": "^0.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "spatie/phpunit-snapshot-assertions": "^4.2"
    },
    "autoload": {
        "psr-4": {
            "Hyqo\\Task\\": "src"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Hyqo\\Task\\Test\\": "tests"
        }
    }
}
