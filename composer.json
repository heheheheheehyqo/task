{
    "name": "hyqo/task",
    "description": "Running any class as a command from the command line",
    "keywords": [
        "cli",
        "command"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Oleg Sedinkin",
            "email": "a@aw.wtf"
        }
    ],
    "bin": "bin/task",
    "require": {
        "php": ">=8.0",
        "hyqo/string": "^2.0",
        "hyqo/container": "^2.0",
        "hyqo/command-line": "^1.0",
        "hyqo/collection": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "spatie/phpunit-snapshot-assertions": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Hyqo\\Task\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hyqo\\Task\\Test\\": "tests"
        }
    }
}
